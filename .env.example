# =============================================================================
# AI BUBBLE ANALYTICS - Environment Variables Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to git (already in .gitignore)

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================

# Server Configuration
NODE_ENV=development
PORT=5000
API_BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Rate Limiting (requests per 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# DATABASE CONFIGURATION (Supabase)
# =============================================================================

# Supabase Configuration
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# Database Connection (if using direct PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/ai_bubble_analytics

# =============================================================================
# EXTERNAL DATA SOURCES API KEYS
# =============================================================================

# Alpha Vantage (for stock market data)
# Get key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key-here

# Finnhub (for real-time stock data)
# Get key from: https://finnhub.io/register
FINNHUB_API_KEY=your-finnhub-api-key-here

# Google Trends API (unofficial - pytrends library or SerpAPI)
# SerpAPI: https://serpapi.com/
SERPAPI_KEY=your-serpapi-key-here

# News API (for AI-related news)
# Get key from: https://newsapi.org/
NEWS_API_KEY=your-newsapi-key-here

# =============================================================================
# DATA UPDATE SCHEDULING
# =============================================================================

# Cron job schedules (cron syntax)
# Daily at 4:30 PM EST for market data
MARKET_DATA_CRON=30 16 * * 1-5

# Weekly on Fridays at 12:00 PM EST for venture capital data
VC_DATA_CRON=0 12 * * 5

# Hourly for Google Trends
TRENDS_DATA_CRON=0 * * * *

# Monthly on first Tuesday at 9:00 AM EST for Census data
CENSUS_DATA_CRON=0 9 1-7 * 2

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration (if implementing user authentication)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d

# API Key for protected endpoints (generate a random string)
API_SECRET_KEY=your-api-secret-key-for-admin-endpoints

# Cron Job Security (Vercel automatically generates this in production)
# Generate a random secret: openssl rand -base64 32
CRON_SECRET=your-cron-secret-key-here

# Admin Secret (for test endpoints)
ADMIN_SECRET=your-admin-secret-for-testing

# Session Secret (for express-session if used)
SESSION_SECRET=your-session-secret-key-here

# =============================================================================
# EMAIL CONFIGURATION (for newsletter)
# =============================================================================

# SMTP Configuration (e.g., using Gmail, SendGrid, AWS SES)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# SendGrid (alternative to SMTP - REQUIRED for newsletter automation)
SENDGRID_API_KEY=your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=newsletter@aibubbleanalytics.com
SENDGRID_FROM_NAME=AI Bubble Analytics

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Google Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry (error tracking)
# Get DSN from: https://sentry.io/
SENTRY_DSN=your-sentry-dsn-here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# React App Environment Variables (must start with REACT_APP_)
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Feature Flags
REACT_APP_ENABLE_NEWSLETTER=true
REACT_APP_ENABLE_PORTFOLIO_SIM=false

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Production URLs
PROD_API_URL=https://api.aibubbleanalytics.com
PROD_FRONTEND_URL=https://aibubbleanalytics.com

# CDN Configuration (for static assets)
CDN_URL=https://cdn.aibubbleanalytics.com

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis (for caching API responses)
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Cache settings
CACHE_ENABLED=true
CACHE_MAX_AGE=300

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Debug mode
DEBUG=true
VERBOSE_LOGGING=true

# Mock data (use mock data instead of real APIs during development)
USE_MOCK_DATA=false

# API request timeout (milliseconds)
API_TIMEOUT=30000

# =============================================================================
# DATA REFRESH INTERVALS (seconds)
# =============================================================================

# How often to refresh each data source
MAGNIFICENT7_REFRESH_INTERVAL=300
REVENUE_GAP_REFRESH_INTERVAL=86400
CIRCULAR_FINANCING_REFRESH_INTERVAL=604800
VALUATION_PREMIUM_REFRESH_INTERVAL=300
DEBT_RATIO_REFRESH_INTERVAL=86400
SEARCH_VOLUME_REFRESH_INTERVAL=3600
ADOPTION_RATE_REFRESH_INTERVAL=2592000
INDEX_CONCENTRATION_REFRESH_INTERVAL=300
PE_RATIO_REFRESH_INTERVAL=300
ENERGY_FOOTPRINT_REFRESH_INTERVAL=604800

# =============================================================================
# NOTES
# =============================================================================

# Refresh Intervals Guide:
# - 300 seconds = 5 minutes (real-time market data)
# - 3600 seconds = 1 hour (trends data)
# - 86400 seconds = 1 day (daily data)
# - 604800 seconds = 1 week (weekly data)
# - 2592000 seconds = 30 days (monthly data)

# Security Best Practices:
# 1. Use strong, random values for all secrets
# 2. Never commit .env file to version control
# 3. Use different values for development and production
# 4. Rotate API keys regularly
# 5. Use environment-specific .env files (.env.development, .env.production)
# 6. Consider using secret management services (AWS Secrets Manager, HashiCorp Vault)

# Data Source Documentation:
# See API.md for detailed information on all data sources and API integrations
